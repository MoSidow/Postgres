{{#each products as |product|}}
<div class="row mb-4 product">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/product/{{product.id}}">{{product.name}}</a>
    </h2>
    <img src={{product.image}}></img>
    <p>
      <span class="dollar-amount">Â£{{format_amount product.price}}</span>
    </p>
    <p>Created by {{product.user.name}} on {{format_date product.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{product.description}}
    </p>
  </div>
</div>
{{/each}}