<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Product:</h3>

    <form class="new-jewellery-form">
      <div >
        <label>Product Name:</label>
        <input type="text" id="product-name"/>
      </div>
      <div>
        <label for="product-image">Image:</label>
        <input type="text" id="product-image"/>
      </div>
      <div>
        <label for="product-cost">Price (Â£)!:</label>
        <input class="form-input" type="number" id="product-cost"/>
      </div>
      <div>
        <label for="product-desc">description:</label>
        <textarea id="product-desc" name="product-desc"></textarea>
      </div>
      <div>
        <button type="submit">Create</button>
      </div>
    </form>
  </div>

  {{#if product.length}}
  <div class="col-md-6 jewellery-list">
    <h3>Current Products:</h3>

    {{#each products as |product|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/product/{{product.id}}">{{product.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button data-id="{{product.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
